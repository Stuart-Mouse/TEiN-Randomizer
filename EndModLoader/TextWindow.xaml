<Window x:Class="TEiNRandomizer.TextWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TEiNRandomizer"
        mc:Ignorable="d"
        Title="Text Prompt"
        SizeToContent="WidthAndHeight">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Name="PromptTextBox" Padding="5,0">Prompt:</TextBlock>
        <TextBox   Grid.Row="0" Grid.Column="1" Name="ResultTextBox" Padding="5,0" MinWidth="100">Answer</TextBox>
        <WrapPanel Grid.ColumnSpan="2" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" Margin="0,5,0,0">
            <Button IsDefault="True" Content="Ok" Click="OkButton_Click" Width="50" Margin="0,0,10,0"/>
            <Button IsCancel="True"  Content="Cancel" Width="50"/>
        </WrapPanel>
    </Grid>
</Window>
